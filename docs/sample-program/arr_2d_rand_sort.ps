class Program:  
    private int[10, 10] a  
    private int i
    private int j
    private int len
    private bool swapped 
    private int iter
    private int temp

    public static int Main():
        len = 10
        FillArr()
        Console.WriteString("Initial Array:")
        Console.WriteLine()
        PrintArr()
        Console.WriteLine()
        Console.WriteString("Sorted by column values:")
        Console.WriteLine()
        SortColumns()
        PrintArr()
        return 0

    private static int FillArr():
        i = 0
        while (i < len):
            j = 0            
            while (j < len):
                a[i, j] = Math.Rand()
                j = j + 1
            i = i + 1
        return 0

    private static int PrintArr():
        i = 0
        while (i < len):
            j = 0            
            while (j < len):
                Console.WriteInt(a[i,j])
                Console.WriteSpace()
                j = j + 1
            Console.WriteLine()
            i = i + 1
        return 0

    private static int SortColumns():
        i = 0
        while (i <= len):
            swapped = true
            len = 9
            iter = 0
            while(swapped):
                swapped = false
                while(iter <= (len - 1)):
                    if(a[iter, i] > a[iter + 1, i]):
                        temp = a[iter, i]
                        a[iter, i] = a[iter + 1, i]
                        a[iter + 1, i] = temp
                        swapped = true
                    iter = iter + 1
                iter = 0  
            i = i + 1           
        return 0
